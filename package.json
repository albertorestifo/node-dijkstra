{
  "name": "node-dijkstra",
  "version": "3.0.0",
  "description": "A NodeJS implementation of Dijkstra's algorithm",
  "author": "Alberto Restifo <alberto.restifo@gmail.com>",
  "main": "dist/src/Graph.js",
  "types": "dist/src/Graph.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/albertorestifo/node-dijkstra"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "npm run lint && npm run build:test && nyc --reporter=html mocha -t 5000 dist/test/**/*.test.js",
    "test:dev": "npm run build:test && mocha -t 5000 dist/test/**/*.test.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build",
    "compile": "npm run build"
  },
  "bugs": {
    "url": "https://github.com/albertorestifo/node-dijkstra/issues"
  },
  "keywords": [
    "dijkstra",
    "shortest path",
    "typescript",
    "graph",
    "algorithm"
  ],
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE.md"
  ],
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.16",
    "@types/sinon": "^10.0.16",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "must": "^0.13.4",
    "nyc": "^15.1.0",
    "prettier": "^3.6.2",
    "sinon": "^15.0.0",
    "typescript": "^5.9.2"
  }
}
